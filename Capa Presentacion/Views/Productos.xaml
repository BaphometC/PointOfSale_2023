                     TextChanged="Buscando"
                     x:Name="txtBuscar"
                     Padding="5,0,0,0" Grid.ColumnSpan="2"/>
            <!--#endregion Texbox-->
            <!--#region BTN Crear-->
            <Button Background="#008200"
                    BorderBrush="Transparent"
                    Grid.Column="5"
                    Grid.Row="2"
                    Cursor="Hand"
                    Width="150"
                    x:Name="BtnCrearProducto"
                    Style="{DynamicResource ButtonStyleCrear}"
                    Click="Agregar_Producto" Margin="90,0,90,0">
                <TextBlock Text="Agregar producto"
                           Foreground="White"
                           FontSize="15"
                           />
            </Button>
            <!--#endregion BTN Crear-->
            <!--#endregion Buscador-->
            <!--#region DATAGRIDUsuarios-->
            <DataGrid Style="{DynamicResource DataGridStyle}" 
                      Grid.Row="4"
                      Grid.Column="1"
                      Grid.RowSpan="2"
                      Grid.ColumnSpan="5"
                      x:Name="GridDatos"
                      AutoGenerateColumns="False"
                      Background="White"
                      Foreground="#212529"
                      FontSize="15"
                      CanUserAddRows="False"
                      CanUserResizeColumns="True"
                      CanUserResizeRows="False"
                      CanUserSortColumns="False"
                      RowBackground="Transparent"
                      HeadersVisibility="Column"
                      GridLinesVisibility="Horizontal"
                      HorizontalGridLinesBrush="#292521">
                <DataGrid.Columns>

                    <DataGridTextColumn Header="ID - Código"
                                        Width="50"
                                        Binding="{Binding id_product}"/>
                    <DataGridTextColumn Header="Descripción"
                                        Width="150"
                                        Binding="{Binding descripcion}"/>
                    <DataGridTextColumn Header="Cantidad"
                                        Width="50"
                                        Binding="{Binding precio_unitario}"/>
                    <DataGridTextColumn Header="Precio Unitario"
                                        Width="*"
                                        Binding="{Binding correo}"/>
                    <DataGridTextColumn Header="Correo"
                                        Width="*"
                                        Binding="{Binding correo}"/>
                    <DataGridTextColumn Header="Rol"
                                        Width="*"
                                        Binding="{Binding nombre_rol}"/>
                    <DataGridTemplateColumn Header="Opciones"
                                            Width="300">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <DockPanel>
                                    <Button Content="Consultar"
                                            x:Name="BtnConsultar"
                                            Background="White"
                                            Width="80"
                                            Cursor="Hand"
                                            Margin="18,0,0,0"
                                            Foreground="#000040"
                                            BorderBrush="transparent"
                                            Style="{DynamicResource ButtonConsult}"
                                            Click="Consultar"
                                            FontWeight="SemiBold"
                                            CommandParameter="{Binding id_product}"/>
                                    <Button Content="Actualizar"
                                            x:Name="BtnActualizar"
                                            Background="White"
                                            Width="80"
                                            Margin="10,0,0,0"
                                            Cursor="Hand"
                                            Foreground="#FBD303"
                                            BorderBrush="transparent"
                                            FontWeight="SemiBold"
                                            Style="{DynamicResource ButtonActual}"
                                            CommandParameter="{Binding id_product}"
                                            Click="Actualizar"/>
                                    <Button Content="Eliminar"
                                            x:Name="BtnEliminar"
                                            Background="White"
                                            Width="80"
                                            Margin="2,0,10,0"
                                            Cursor="Hand"
                                            Foreground="#BB0000"
                                            BorderBrush="transparent"
                                            FontWeight="SemiBold"
                                            CommandParameter="{Binding id_product}"
                                            Style="{DynamicResource ButtonEliminar}" 
                                            Click="Eliminar"/>
                                </DockPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <!--#endregion-->
            <!--#region FRAMEUSUARIOS-->
            <Frame Name="FrameProductos"
                   Grid.Column="0"
                   Grid.Row="0"
                   Grid.RowSpan="8"
                   Grid.ColumnSpan="7" Navigated="FrameProductos_Navigated"/>
            <!--#endregion-->
        </Grid>
    </Border>
</UserControl>
